<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "HappyCasts" %></title>
  <link href="/favicon.png" rel="icon" type="image/x-png" />
  <%= stylesheet_link_tag "application" %>
  <%= csrf_meta_tag %>
  <script src="http://vjs.zencdn.net/4.8/video.js"></script>

</head>
<body class="<%= params[:controller] + '-' + controller.action_name %>">
<%= render 'shared/header' %>
<% if flash[:notice] %>
  <p class="notice">
    <span><%= flash[:notice] %></span>
  </p>
<% end %>
<p class="notice">nice</p>
<%= yield %>

<%= render partial: "shared/footer" %>
<%= javascript_include_tag "application"%>
<%= yield :template_js %>
<script type="text/javascript">
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-34710471-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
</script>
<script>
  var hideNotice = function(){
      $(".notice").fadeOut("slow");
  }
  setTimeout(hideNotice, 3000);
</script>
</body>
</html>
