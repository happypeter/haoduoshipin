<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "HappyCasts" %></title>
  <link href="/assets/play.png" rel="icon" type="image/x-png" />
  <%= stylesheet_link_tag "application" %>
  <%= csrf_meta_tag %>
  <link href="http://vjs.zencdn.net/4.3/video-js.css" rel="stylesheet">
  <script src="http://vjs.zencdn.net/4.3/video.js"></script>
  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-34710471-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
</head>
<body>
<div id="wrapper">
  <%= render 'shared/header' %>
  <div id="main-content">
    <% if params[:autoplay] %>
      <div class="videojs-bg"></div>
    <% end %>
    <div class="container">
      <% if flash[:notice] %>
        <p class="notice"><%= flash[:notice] %></p>
      <% end %>
      <%= yield %>
      <div id="footer-push"></div><!-- hack for sticky footer -->
    </div>
  </div>
</div>
<div class="footer">
  <div class="container">
    <ul class="footer_nav">
      <h4>Happycasts</h4>
      <li><a href="/about">About</a></li>
      <li><a href="http://creativecommons.org/licenses/by-nc-nd/3.0/us/">License</a></li>
      <li><a href="/users">Users(<%= User.count %>)</a></li>
    </ul>
    <ul class="footer_nav">
           <h4>Others</h4>
      <li><a href="http://ruby-china.org/">Ruby-China</a></li>
      <li><a href="http://www.linfo.org/">Linfo</a></li>
      <li><a href="http://www.github.com/happypeter/happycasts">Code on Github</a></li>
    </ul>
    <ul class="footer_nav">
      <h4>Meetup</h4>
      <li><a href="http://offline.happycasts.net/"><%= t("offline_meetup") %></a></li>
    </ul>
  </div>
</div>
<%= javascript_include_tag "application"%>
<%= yield :template_js %>
</body>
</html>
