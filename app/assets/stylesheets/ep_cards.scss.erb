.dark {
  padding-top: 30px;
  margin-top: -30px;
  background-color: #fffffd;
  background-image: url(<%= asset_path 'paper.png' %>);
}
#episodes {
  margin-left: -20px;
  a { color: black; }
  .ep_card {
    width: 280px;
    float: left;
    margin-bottom: 20px;
    margin-left: 20px;
  }
  .ep_main {
    height: 300px;
    position: relative;
    padding: 25px 15px 15px 5px;
    text-align: center;
    border: 1px solid #d9d9d9;
    background-color: #fff;
    font-size: 13px;
    &:hover {
      border: 1px solid #d9d9d9;
      -webkit-box-shadow: 0 1px 9px rgba(0,0,0,0.45);
      -moz-box-shadow: 0 1px 9px rgba(0,0,0,0.45);
      box-shadow: 0 1px 9px rgba(0,0,0,0.45);
      -webkit-transition: all 0.35s linear;
      -moz-transition: all 0.35s linear;
      -o-transition: all 0.35s linear;
      transition: all 0.35s linear;
    }
  }
  .ep_no {
    width: 50px;
    position: absolute;
    top: 0px;
    left: 0px;
  }
  .ep_id {
    height: 50px;
    width: 50px;
    line-height: 50px;
    text-align: center;
    font-size: 32px;
    -moz-border-radius: 25px;
    -webkit-border-radius: 25px;
    border-radius: 25px;
    vertical-align: middle;
    background: #ddd;
  }
  .screenshot img {
    border: solid 5px #ddd;
  }
  .ep_name {
    font-size: 18px;
    margin: 20px 10px;
  }
  .content {
    margin-top: 10px;
    padding:0 5px;
    overflow: hidden;
    height: 40px;
    line-height: 20px;
  }
  .metadata {
    width: 100%;
    border-top: 1px solid #ddd;
    position: absolute;
    left: 0px;
    padding-top: 5px;
    bottom: 15px;
  }
}
